@{
    ViewData["Title"] = "Admin";
}

@model List<Bowler>


<div style="background-color:whitesmoke">
    <div class="row m-4 p-1 justify-content-end">
        <a class="btn btn-primary btn-md mx-4 mr-auto" asp-controller="home" asp-action="NewBowler">Add New Bowler</a>
    </div>
    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>First Name:</th>
                <th>Middle Initial:</th>
                <th>Last Name:</th>
                <th>Address:</th>
                <th>City:</th>
                <th>State:</th>
                <th>Zip:</th>
                <th>Phone Number:</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var b in Model)
            {<tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>

                <td class="text-center"><a class=" btn btn-sm btn-primary text-dark" asp-controller="home" asp-action="edit" asp-route-bowlerid="@b.BowlerID">Edit</a></td>
                <td class="text-center"><a class=" btn btn-sm btn-primary text-dark" asp-controller="home" asp-action="delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>
            </tr>
            }
        </tbody>

        </table>
    </div>